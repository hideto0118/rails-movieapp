<div class="main actor-index">
      <div class="container">
        <div class="row cf">

         <% @actors.each do |a| %>
          <div class="actor col-xs-2">
            <%= image_tag a.image %>
            <h3><%= a.first_name %> <%= a.last_name %></h3>
            <%= link_to "Learn more", actor_path(a.id) %>
            <p><%= a.bio %></p>
          </div>
          <% end %>
      </div>

        <div class="moviesList col-xs-2">
          <h2><%= link_to "Jump to Movies List", "/movies" %></h2>
        </div>


</div>